---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

import team from '~/content/team';
// images
import teamImage from '~/assets/images/alumni_game_2024.png';

const metadata = {
  title: 'Roster',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Roster"
    title="2024"
    subtitle="Season"
    actions={[{ variant: 'primary', target: '_blank', text: 'Previous Teams', href: '/alumni' }]}
    image={{
      src: teamImage,
      alt: '2024 Alumni Game',
    }}
  />

  <!-- Testimonials Widget *********** -->
  <Testimonials
    title="Forwards"
    testimonials={team.members}
    callToAction={{
      target: '_blank',
      text: 'Previous Rosters...',
      href: '/alumni',
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/',
      },
    ]}
    title="Sponsor Us"
    subtitle="We're always looking for new sponsors!"
  />
</Layout>
